<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" style="-fx-background-color: #EDEFF1;">
    <children>
        <VBox alignment="TOP_CENTER" spacing="20.0" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.1), 10, 0, 0, 5); -fx-padding: 20;">
            <children>
                <!-- Input Section -->
                <HBox alignment="CENTER_LEFT" spacing="15.0" prefHeight="50.0" style="-fx-padding: 15; -fx-border-color: #D1D5DA; -fx-border-width: 0 0 1 0;">
                    <children>
                        <Label text="Enter number of threads:" style="-fx-font-family: 'Roboto'; -fx-font-size: 16; -fx-text-fill: #1C1C1E;" />
                        <TextField fx:id="textFieldTcp" promptText="Threads" prefHeight="35.0" prefWidth="150.0" style="-fx-background-color: #F9FAFB; -fx-border-color: #BDC1C6; -fx-border-radius: 8; -fx-padding: 5; -fx-font-family: 'Roboto';" />
                    </children>
                </HBox>

                <!-- Progress Bar -->
                <ProgressBar fx:id="progressBar" prefHeight="20.0" prefWidth="400.0" progress="0.0" style="-fx-accent: #1565C0; -fx-background-color: #CFD8DC; -fx-border-radius: 5;" />

                <!-- Status Section -->
                <HBox alignment="CENTER" spacing="10.0">
                    <children>
                        <Label fx:id="labelCurrent" text="0" style="-fx-font-family: 'Roboto'; -fx-font-size: 14; -fx-text-fill: #1C1C1E;" />
                        <Label text="out of" style="-fx-font-family: 'Roboto'; -fx-font-size: 14; -fx-text-fill: #606266;" />
                        <Label fx:id="labelTotal" text="100" style="-fx-font-family: 'Roboto'; -fx-font-size: 14; -fx-text-fill: #1C1C1E;" />
                    </children>
                </HBox>

                <!-- Action Buttons -->
                <HBox alignment="CENTER" spacing="50.0">
                    <children>
                        <Button fx:id="stopButton" text="Stop" onAction="#stopCopyButtonAction" prefWidth="120.0" prefHeight="40.0" style="-fx-background-color: #FF1744; -fx-text-fill: white; -fx-background-radius: 20; -fx-font-family: 'Roboto'; -fx-font-size: 14;" />
                        <Button fx:id="startButton" text="Start" onAction="#startCopyButtonAction" prefWidth="120.0" prefHeight="40.0" style="-fx-background-color: #1E88E5; -fx-text-fill: white; -fx-background-radius: 20; -fx-font-family: 'Roboto'; -fx-font-size: 14;" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
